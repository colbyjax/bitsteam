@model Blogger.Models.BlogViewData

@foreach(var blog in Model.allBlogs) {
    <div class="box">
        <fieldset class="leftBlock">
            <legend>@Html.ActionLink(blog.title,"ChooseBlog", new { blog_id = @blog.id })</legend>
            <ul>
                <li class="date">@blog.date</li>
                <li class="link">
                @for(int i=0; i < blog.tags.Count; i++)
                 {
                    
                    if(i < blog.tags.Count-1)
                    {
                        @Html.ActionLink(blog.tags[i].name + ", ", "ChooseTag", new { tag_id = blog.tags[i].id })
                       
                    }
                    else
                    {
                        // Last Tag we don't want a comma
                        @Html.ActionLink(blog.tags[i].name, "ChooseTag", new { tag_id = blog.tags[i].id })
                    }
                    
                 }
                </li>
            </ul>
        </fieldset>
    </div>
}


